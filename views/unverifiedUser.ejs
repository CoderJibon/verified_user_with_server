<section class="mt-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-primary" href="/">back</a>
                <hr>
                 <h3 class="text-center text-uppercase"> Unverified USER</h3>
                <hr>
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Status</th>
                        <th scope="col">User Photo</th>
                        <th scope="col">Phone Verify</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% unverifiedUser.forEach((data,index) => { %>
                      <tr>
                        <td scope="row"><%= index + 1 %> </td>
                        <td><%= data.name %> </td>
                        <td><%= data.email %></td>
                        <td><%= data.phone %></td>
                        <td><span class="btn btn-danger text-uppercase ">Unverified</span></td>
                        <td>
                          <% if (data.Photo == "userPhoto.webp") { %>
                            <img class="unvariImage" src="userPhoto/userPhoto.webp" alt="<%= data.name %>">
                            <% } else { %>
                              <img class="unvariImage" src="userPhoto/<%= data.Photo %>" alt="<%= data.name %>">
                          <% } %>
                         
                        </td>
                        <td>
                          <a class="btn btn-warning text-uppercase" href="/user/user_verified/<%= data.id %>">Unverified</a>
                        </td>
                        <td>
                           <a class="btn btn-primary" href="/user/view/<%= data.id %>"><i class="fa-solid fa-eye"></i></a>
                           <a class="btn btn-success" href="/user/update/<%= data.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                           <a id="userDelate" class="btn btn-danger" href="/user/<%= data.id %>"><i class="fa-solid fa-trash"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</section>