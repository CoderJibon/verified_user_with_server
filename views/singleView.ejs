<section>
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card">
                    <img src="/userPhoto/<%= singleUser.Photo %>" class="card-img-top" alt="">
                    <div class="card-body text-center">
                        <ul>
                            <li><h5 class="card-title text-uppercase"><%= singleUser.name %> </h5></li>
                            <li><p class="card-text"><%= singleUser.email %></p></li>
                            <li> <p class="card-text"><%= singleUser.phone %></p></li>
                            <li><p class="card-text"> 
                                <% if (singleUser.isActive == true) { %>
                                    <span class="btn btn-primary text-uppercase">verified</span>
                                <% } else { %>
                                    <span class="btn btn-danger text-uppercase">Unverified</span>
                                <% } %>
                                </p></li>
                        </ul>
                      
                      
                     
                      
                      <a href="/" class="btn btn-info w-100">Back To Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>