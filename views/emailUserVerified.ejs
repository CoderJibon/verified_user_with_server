<section class="mt-2 mb-3">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <a class="btn btn-primary" href="/">Back to Home</a>
                <div class="card mt-2 shadow">
                    <div class="card-body">
                        <h4 class="text-center"> Hello <%= name %>, Please Verify Your Identity</h4>
                        <hr>
                        <p class="text-center text-primary text-uppercase">Email Already Sent Please Check you Mail Inbox...</p>
                        <img class="w-100" src="https://www.gifcen.com/wp-content/uploads/2022/02/thank-you-gif-8.gif" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% if (name) { %>
    <script>
      Swal.fire({
        position: 'top-center',
        icon: 'success',
        title: 'Your Profile has been success',
        showConfirmButton: false,
        timer: 1500
        })
    </script>
    <% } else { %>
    <script>
        Swal.fire({
            position: 'top-center',
            icon: 'error',
            title: 'Please try to again!',
            showConfirmButton: false,
            timer: 1500
            })
    </script>
<% } %>


